<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/icon"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_alignParentBottom="true">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/signupusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/sfield_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_centerHorizontal="true"
                android:singleLine="true"

                android:paddingLeft="5dp"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/signuppassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupusername"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/sfield_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_centerHorizontal="true"
                android:paddingLeft="5dp"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/bsignup"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/signuppassword"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="@color/colorAccent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/text_login"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/bsignup"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/bsignup"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textColor="@color/colorSecondaryText"
            android:id="@+id/sfield_forgpass"
            android:layout_alignBaseline="@+id/text_login"
            android:layout_alignBottom="@+id/text_login"
            android:layout_alignLeft="@+id/bsignup"
            android:layout_alignStart="@+id/bsignup" />
    </RelativeLayout>
</RelativeLayout>