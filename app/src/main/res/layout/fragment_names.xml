<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/toolbar_container_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_names"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary" />

            <com.miguelcatalan.materialsearchview.MaterialSearchView
                android:id="@+id/search_view_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </android.support.design.widget.AppBarLayout>

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/studentlist"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_background"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/ic_shortcut_person_outline"
            android:id="@+id/profileImg"
            />
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImg"
            android:orientation="vertical"
            android:id="@+id/info"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:id="@+id/textViewName"
                android:textSize="23dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reg No :"
                android:textSize="23dp"
                android:id="@+id/RegNo"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department :"
                android:id="@+id/Department"
                android:textSize="23dp"
                android:layout_centerHorizontal="true"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Books Issued  :"-->
                <!--android:id="@+id/BooksIssued"-->
                <!--android:textSize="23dp"-->
                <!--android:layout_centerHorizontal="true"/>-->


        </LinearLayout>


        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/note"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="18dp"
            android:textColor="#B22222"
            android:text="Note:Borrowed books have to be returned prior to the next 30 days"/>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note"
            android:layout_centerHorizontal="true"
            android:background="@drawable/profile_background"
            android:backgroundTint="#ffffff"
            android:text="Sign out"
            android:layout_margin="20dp"
            android:elevation="15dp"
            android:shadowColor="#000000"
            android:id="@+id/signout"/>

    </RelativeLayout>

</LinearLayout>